
{{#if message.isLink}}
  <li class="message link" {{action "goToLink" message.url}}>
    <div class="link-image">
      <img {{bind-attr src="message.user.imageUrl"}} class="icon" />
      <span class="ion-forward"></span>
    </div>
    <div class="info">
      <div class="text">
        {{message.user.id}} shared a link
      </div>
    </div>
  </li>

{{else}}
  <li {{bind-attr class=":message isSelf"}}>
    <img {{bind-attr src="message.user.imageUrl"}} class="icon" />
    <div class="info">
      {{#if isSelf}}
        <div class='text'>
          {{message.user.id}}
          {{message.text}}
        </div>
      {{else}}
        <div class='username'>
          {{message.user.id}}
        </div>
        <div class="text">
          {{message.text}}
        </div>
      {{/if}}
    </div>
  </li>
{{/if}}
