.header
  a href="/"
    img src="assets/images/full-logo.png"
  .search
    .searchBar
      = input type=text value=searchTerm placeholder="Search" autofocus="autofocus"
      span.ion-close-circled
    if showSearchList
      .wordListWrapper
        ul.wordList
          = each wordList.results
            li
              a{action 'clickWordFromList' word_id} = name


  .nav
    if session.isAuthenticated
      h2
        | Welcome #{session.username}!

      a click='invalidateSession' Logout
    else
      .signButtons
        link-to .signin "user.login" | Sign In
        link-to .signup "user.new" | Sign Up

= flash-message
.content
  = outlet

.footer
  .social
    a href="http://twitter.com/thewordset" target="_blank"
      span.ion-social-twitter
    a href="http://facebook.com" target="_blank"
      span.ion-social-facebook
