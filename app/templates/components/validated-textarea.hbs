{{#if showError}}
  <span class="error">{{errors}}</span>
  {{yield}}
{{/if}}
<div class="textarea">
  {{#if value}}
    {{textarea value=value focus-out="showErrors"}}
  {{else}}
    {{textarea value=value focus-out="showErrors" placeholder="No example sentence. Please add one!"}}
  {{/if}}
</div>
