
<div class="badge">
  <img src="/assets/images/badges/projects/{{project.id}}.png" title="{{project.description}}" alt="{{project.description}}">
</div>

<div class="information">
  <div class="title">
    {{#if link}}
      <h2>{{#link-to "project.index" project.id}}{{project.name}}{{/link-to}}</h2>
    {{else}}
      <h2>{{project.name}}</h2>
    {{/if}}
    {{#if complete}}
      <span class="ion-checkmark-circled"></span>
    {{/if}}
  </div>

  <div class="description">
    {{project.description}}
  </div>

  <div class="progress-numbers">
    {{#if complete}}
    {{else}}
      <span class="metric">Total:</span> {{project.totalTargetsCount}}
      <span class="metric">Pending:</span> {{project.pendingTargetsCount}}
    {{/if}}
    <span class="metric">Fixed:</span> {{project.fixedTargetsCount}}
    {{#if progress}}
      <div class="progress-bar">
        <div class="progress">
          <div class="bar positive" {{bind-attr style="project.percentageThrough"}}>
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</div>

{{#if project.hasTimer}}
  <div class="timer">
    <div class="remaining">
      {{liquid-bind hoursRemaining}}:{{liquid-bind minutesRemaining}}:{{liquid-bind secondsRemaining}}
    </div>
  </div>
  <div class="fixed">
    <div class="expected">
      {{expectedFixed}}
    </div>
    <div class="balance">
      {{differenceFromExpected}}
    </div>
  </div>
{{/if}}
