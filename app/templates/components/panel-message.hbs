
{{#if message.isLink}}
  <li class="message link" {{action "goToLink"}}>
    <div class="link-image">
      <img {{bind-attr src="message.user.imageUrl"}} class="icon" />
      <span class="ion-forward"></span>
    </div>
    <div class="info">
      <div class="text">
        {{message.user.id}} shared a link {{messagedAt}}
      </div>
    </div>
  </li>

{{else}}
  <li {{bind-attr class=":message message.isSelf"}}>
    {{#link-to "user.index" message.user.id}}<img {{bind-attr src="message.user.imageUrl"}} class="icon" />{{/link-to}}
    <div class="info">
      {{#if message.isSelf}}
        <div class='text'>
          {{message.user.id}}
          {{message.text}}
        </div>
      {{else}}
        <div class='username'>
          {{#link-to "user.index" message.user.id}}{{message.user.id}}{{/link-to}}
        </div>
        <div class="text">
          {{message.text}}
        </div>
        <div class="time">{{messagedAt}}</div>

      {{/if}}
    </div>
  </li>
{{/if}}
