<li>
  <div class="info">
    {{#if displayEdit}}
     <div class="editDefinition">
        <label>
          Definition
          {{inline-errors errors=errors.def}}
          {{textarea value=meaning.def}}
        </label>
        <label>
          Example sentence
          {{inline-errors errors=errors.example}}
          {{textarea value=meaning.example id=sentence}}
        </label>
        <label>
          Reason for change
          {{inline-errors errors=errors.reason}}
          {{textarea value=reason id=reason}}
        </label>
        <button class="submitSuggestion" {{action "submitSuggestion"}}>Suggest</button>
        <button class="negative" {{action "cancel"}}>Cancel</button>
      </div>
    {{else}}
      <div class="meaning">
        <div class="defWrap">
          <div class="def">
            {{meaning.def}}
            {{#if canEdit}}
              {{edit-button action="startEditing"}}
            {{else}}
              {{locked-icon}}
            {{/if}}
          </div>
        </div>

        {{#if meaning.example}}
        <div class="quoteWrap">
          <div class="quote">
            <span class="quotemark">“</span>
            {{meaning.example}}
            <span class="quotemark">”</span>
          </div>
        </div>
        {{/if}}

      </div>
    {{/if}}
  </div>
</li>
