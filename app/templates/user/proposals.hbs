<div class="proposals-user">
{{#each model.proposals as |proposal|}}
  {{#link-to 'proposal' proposal}}
    <div class="{{proposal.state}} item"}}>
      <div class="sentence">
        <span class="state">{{proposal.state}}</span>
        proposal for a
        <span class="action">
          {{proposal.typeName}}:
        </span>
        <span class="word">
          {{proposal.wordName}}
        </span>
      </div>
      <div class="progress-bar">
        <div class="progress">
          <div class="bar negative" style="{{proposal.negativeTally}}"></div>
          <div class="bar positive" style="{{proposal.positiveTally}}"></div>
        </div>
      </div>
    </div>
  {{/link-to}}
{{else}}
  This User hasn't proposed anything yet.
{{/each}}
</div>
