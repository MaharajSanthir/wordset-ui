<form {{submit "authenticate"}}>
  <div class="sign-module">
    <h3> Sign In </h3>
    {{#if errorMessage}}
      <div class="login-error">
        <span class="ion-android-alert"></span>
        {{errorMessage}}
      </div>
    {{/if}}
    <div class="username">
      <label> Username
      {{input value=identification type="text" autofocus="autofocus"}}
      </label>
    </div>
    <div class="password">
      <label> Password
      {{input type="password" value=password}}
      </label>
    </div>
    <button {{action "authenticate"}}> Sign In </button>

    <div class="aside">
      Don't have an account? Register {{#link-to 'user.new'}}here{{/link-to}}.
    </div>
    <!-- <div class="aside">
      {{#link-to 'user.forgot-password'}}Forgot your password?{{/link-to}}
    </div> -->
  </div>
</form>
