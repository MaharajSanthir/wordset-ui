form submit="authenticate"
  .sign-module
    h3 Sign In
    if errorMessage
      .login-error
        = errorMessage
    .username
      label Username
      = input value=identification type="text" autofocus="autofocus"
    .password
      label Password
      = input type="password" value=password

    button type=submit Sign In

    .aside
      | Don't have an account? Register #{link-to 'user.new' | here}.
