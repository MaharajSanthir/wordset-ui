<div class="addMeaning">
  {{#each error in errors.messages}}
    <div class="error">
      {{error}}
    </div>
  {{/each}}
  <label>
    Part of speech
    {{view "select" content=posList value=pos}}
  </label>
  <label>
    Definition
    {{textarea value=def}}
  </label>
  <label>
    Example sentence
    {{textarea value=example}}
  </label>
  <label>
    Reason and sources
    {{textarea value=reason}}
  </label>
  <button class="submitProposal" {{action "submitProposal"}}>Suggest</button>
  <button class="negative" {{action "cancel"}}>Cancel</button>
</div>
