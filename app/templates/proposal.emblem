.proposed-change
  span Proposed change to:
  model.wordName
.action-change
  span Action:
  model.action
.reason-explanation
  span Reason:
  if model.reason
    model.reason
  else
    if model.wordnet
      em Imported from Wordnet 3.0
    else
      em No reason given

if model.original
  .proposal.original
    h2 Original
    .word
      model.word.name
    .by
      link-to "proposal" model.parentId
        | View this Proposal
      | by&nbsp;
      if model.originalUser
        model.originalUser
      else
        | Wordnet 3.0

    .pos
      model.pos
    ol
      li
        .info
          .definition
            .def
              model.original.def
          .quoteWrap
            if model.original.example
              .quote.highlight
                span.quotemark “
                model.original.example
                span.quotemark ”
            else
              em No example previously

.proposal.change
  h2 New
  .word
    model.wordName
  .by
    | by&nbsp;
    if model.wordnet
      | Wordnet 3.0
    else
      model.user.id
  .pos
    model.pos
  ol
    li
      .info
        .definition
          .def
            def
        .quoteWrap
          .quote.highlight
            span.quotemark “
            example
            span.quotemark ”
