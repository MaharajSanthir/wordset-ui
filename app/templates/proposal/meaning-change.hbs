<div class="word">
  {{#link-to "seq.wordset.index" model.lang.id model.wordName}}
    {{model.wordName}}
  {{/link-to}}
</div>
<div class="pos">
  {{model.original.pos}}
</div>

<div class="meaning-labels">
{{#each label in model.labels}}
  <div {{bind-attr class=":label label.isDialect:dialect:nondialect"}}>{{label.name}}</div>
{{/each}}
{{#each label in model.original.labels}}
  {{label}}
{{/each}}
</div>

{{#if isEditing}}
  {{partial "proposal/edit-meaning-change-form"}}
{{else}}
  <div class="info">
    <div class="definition">
      <div class="def">
        {{diff-text model.original.def model.def}}
      </div>
    </div>
    <div class="quoteWrap">
      <div class="quote highlight">
        <span class="quotemark"> “ </span>
          {{diff-text model.original.example model.example}}
        <span class="quotemark"> ” </span>
      </div>
    </div>
  </div>
{{/if}}
