<div class="word">
  {{#link-to "word.index" model.word}}
    {{model.wordName}}
  {{/link-to}}
</div>
<div class="pos">
  {{model.original.pos}}
</div>

<div class="info">
  <div class="definition">
    <div class="def">
      {{model.original.def}}
    </div>
  </div>
  {{#if model.original.example}}
  <div class="quoteWrap">
    <div class="quote highlight">
      <span class="quotemark"> “ </span>
        {{model.original.example}}
      <span class="quotemark"> ” </span>
    </div>
  </div>
  {{/if}}
</div>
