<div class="word">
  {{#link-to "word.index" model.word}}
    {{model.wordName}}
  {{/link-to}}
</div>

{{#if isEditing}}
  {{partial "proposal/edit-new-meaning-form"}}
{{else}}
  <div class="pos">
    {{pos}}
  </div>
  <div class="info">
    <div class="definition">
      <ins class="def">
        {{def}}
      </ins>
    </div>
    <div class="quoteWrap">
      <ins class="quote highlight">
        <span class="quotemark"> “ </span>
        {{example}}
        <span class="quotemark"> ” </span>
      </ins>
    </div>
  </div>
{{/if}}

{{#if original.meanings}}
<h3>Existing Meanings</h3>
{{/if}}
<ol>
  {{#each meaning in original.meanings}}
    <li>
      <div class="info">
        <div class="definition">
          <div class="def">
            {{meaning.def}}
          </div>
        </div>
        {{#if meaning.example}}
        <div class="quoteWrap">
          <div class="quote highlight">
            <span class="quotemark"> “ </span>
            {{meaning.example}}
            <span class="quotemark"> ” </span>
          </div>
        </div>
        {{/if}}
      </div>
    </li>
  {{/each}}
</ol>
