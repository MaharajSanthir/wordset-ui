<h4>Vote</h4>
{{#if isOpen}}
  {{#if currentUser}}
    {{#if canVote}}
      <div class="action-bar">
        {{#if proposal.isRemoval}}
          <button {{action "registerVote" "yea"}} class="yae positive"><span class="ion-thumbsup"></span>Delete</button>
          <button {{action "registerVote" "nay"}} class="nay negative"><span class="ion-android-hand"></span>Keep</button>
        {{else}}
          <button {{action "registerVote" "yea"}} class="yae positive"><span class="ion-thumbsup"></span>Yea</button>
          <button {{action "registerVote" "nay"}} class="nay negative"><span class="ion-android-hand"></span>Nay</button>
        {{/if}}
        <button {{action "registerVote" "skip"}} class="skip"><span class="ion-ios-fastforward"></span>Skip</button>
        <button {{action "registerVote" "flag"}} class="flag"><span class="ion-flag"></span>Flag</button>
      </div>
    {{else}}
      <div class="action-bar three-buttons">
        <button {{action "randomProposal"}} class="positive">Next Proposal</button>
        <button {{action "randomWord"}} class="skip">Random Word</button>
        <button {{action "withdrawVote"}} class='negative'>Withdraw Vote</button>
      </div>
    {{/if}}
  {{else}}
    <p>{{#link-to "users.new"}}Register{{/link-to}} or {{#link-to "users.login"}}sign in{{/link-to}} to vote.</p>
  {{/if}}
{{else}}
  <div class="action-bar">
    <button {{action "randomProposal"}} class="skip next">See another open proposal</button>
  </div>
{{/if}}
