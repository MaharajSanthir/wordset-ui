<h4>Vote</h4>
{{#if isOpen}}
  {{#if currentUser}}
    {{#if myVote}}
      <p>Thanks for your vote. {{#link-to "proposals.random"}}See another proposal?{{/link-to}}</p>
    {{else}}
      <div class="new-vote">
        <button {{action "voteYae"}}><span class="ion-thumbsup"></span>Yae</button>
        <button {{action "voteNay"}} class="negative"><span class="ion-thumbsdown"></span>Nay</button>
        <button {{action "voteFlag"}} class="flag"><span class="ion-flag"></span>Flag</button>
      </div>
      <div class="comment-box">
        <div>Comment</div>
        {{textarea value=comment}}
      </div>
    {{/if}}
  {{else}}
    <p>{{#link-to "user.new"}}Sign up to vote.{{/link-to}}</p>
  {{/if}}
{{else}}
<p>
  Voting is closed.
  {{#if currentUser}}
    {{#link-to "proposals.random"}}See another proposal?{{/link-to}}
  {{/if}}
</p>
{{/if}}
