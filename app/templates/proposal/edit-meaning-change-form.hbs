<div class="addMeaning">
  {{#each error in errors.messages}}
    <div class="error">
      {{error}}
    </div>
  {{/each}}
  <label>
    Definition
    {{validated-textarea value=model.def errors=errors.def}}
  </label>
  <label class="edit-example">
    Example sentence
    <p>Note: no quotemarks are necessary.</p>
    {{validated-textarea value=model.example errors=errors.example}}
  </label>
  <label>
    Reason and sources
    {{textarea value=model.reason}}
  </label>
  <button class="submitProposal" {{bind-attr disabled=isInvalid}} {{action "submitEdit"}}>Submit Edit</button>
  <!-- <button class="flag" {{action "withdrawProposal"}}>Withdraw</button> -->
  <button class="negative" {{action "cancelEdit"}}>Cancel</button>
</div>
